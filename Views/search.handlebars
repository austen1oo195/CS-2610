<link rel = "stylesheet" href = "\CSS\image.css">

<div class="saved">
  <h1>Saved Searches</h1>

  <ul class="searches">
    {{#each profile.savedSearches}}
      <div class="row">
        <form action="" method="post">
          <input class="button" type="submit" id="search" name="query" value="{{this}}">
        </form>
        <form action="/user/search/delete" method="post">
          <input type="hidden" name="tag" value="{{this}}">
          <input class="button" type="submit" name="submit" value="X">
        </form>
      </div>
    {{/each}}
  </ul>

</div>

<div class="search">
  <form action="" method="post">
    <input class="SearchBox" type="text" name="query" placeholder="Search..." required>
    <input class="button" type="submit" name="submit" value="Search">
  </form>
</div>

<div class="border"> </div>

<form action="/user/search/save" method="post">
  <div class="Results">
    {{#if tag }}
      <h2>Results for: {{tag}}</h2>
      <input type="hidden" name="tag" value="{{tag}}">
      <input class="button" type="submit" name="save" value="Save">
    {{/if}}
  </div>
</form>

{{> images }}
